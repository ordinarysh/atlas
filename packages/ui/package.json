{
  "name": "@ordinarysh/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    "./styles.css": "./dist/index.css",
    "./*": "./dist/*.js"
  },
  "license": "MIT",
  "scripts": {
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "build:components": "tsc",
    "check-types": "tsc --noEmit",
    "dev:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "dev:components": "tsc --watch",
    "lint": "eslint src --max-warnings 0"
  },
  "peerDependencies": {
    "react": "^19"
  },
  "devDependencies": {
    "@ordinarysh/eslint-config": "workspace:*",
    "@ordinarysh/tailwind-config": "workspace:*",
    "@ordinarysh/typescript-config": "workspace:*",
    "@tailwindcss/cli": "^4.1.15",
    "@types/react": "^19.2.2",
    "eslint": "^9.38.0",
    "tailwindcss": "^4.1.15",
    "typescript": "5.9.3"
  }
}
